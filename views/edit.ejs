<%- include('partials/header') %>

<div class="ui main text container segment">
	<div class="ui huge header">
		Edit Blog
	</div>
	<form action="/blogs/<%= blog._id %>?_method=PUT" class="ui form" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[title]" value="<%=blog.title%>" placeholder="Title">
		</div>
		<div class="field">
			<label>Image</label>
			<input type="text" name="blog[image]" value="<%=blog.image%>" placeholder="Image URL">
		</div>
		<div class="field">
			<label>Comments</label>
			<textarea name="blog[body]" placeholder="Your thoughts.."><%=blog.body%></textarea>
		</div>
		<div class="field">
			<input class="ui black basic button" type="submit">
		</div>
	</form>
	<a id="go-back" href="/blogs/<%= blog._id %>">Go Back</a>
</div>

<%- include('partials/footer') %>
